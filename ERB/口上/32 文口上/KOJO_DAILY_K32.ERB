@KOJO_DAILY_K32_INVITATION_FROM_AYA
#DIM ボス
#DIM 文
文 = NAME_TO_CHARA("文")

;文と別勢力で、捕虜でない 4%
SIF !CHECK_KOJO_DAILY_HAPPEN(文, 40, 0, 0, -1)
	RETURN -1

SIF KDVAR:文:文_新聞勧誘
	RETURN -1

;主人公は男であること
