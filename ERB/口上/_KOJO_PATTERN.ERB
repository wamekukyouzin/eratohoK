;-------------------------------------------------
;番号ARG:0のキャラについて、素質を元にどの汎用口上を使うかを決定する
;-------------------------------------------------
@SET_KOJO_PATTERN(ARG:0)
;子供である場合
IF IS_CHILD(ARG:0)
	;男性・男双
	IF GROUPMATCH(TALENT:(ARG:0):性別, 0, 3)
		CFLAG:(ARG:0):汎用口上パターン = 1300
	;女性・女双・男の娘
	ELSE
		;万能
		IF TALENT:(ARG:0):成長型 == 0
			CFLAG:(ARG:0):汎用口上パターン = 1400
		;知将
		ELSEIF TALENT:(ARG:0):成長型 == 1
			CFLAG:(ARG:0):汎用口上パターン = 1400
		;学士
		ELSEIF TALENT:(ARG:0):成長型 == 2
			CFLAG:(ARG:0):汎用口上パターン = 1410
		;両道
		ELSEIF TALENT:(ARG:0):成長型 == 3
			CFLAG:(ARG:0):汎用口上パターン = 1400
		;武官
		ELSEIF TALENT:(ARG:0):成長型 == 4
			CFLAG:(ARG:0):汎用口上パターン = 1400
		;軍師
		ELSEIF TALENT:(ARG:0):成長型 == 5
			CFLAG:(ARG:0):汎用口上パターン = 1410
		;文官
		ELSEIF TALENT:(ARG:0):成長型 == 6
			CFLAG:(ARG:0):汎用口上パターン = 1410
		;芸能
		ELSEIF TALENT:(ARG:0):成長型 == 7
			CFLAG:(ARG:0):汎用口上パターン = 1410
		;料理
		ELSEIF TALENT:(ARG:0):成長型 == 8
			CFLAG:(ARG:0):汎用口上パターン = 1400
		;天才
		ELSEIF TALENT:(ARG:0):成長型 == 9
			CFLAG:(ARG:0):汎用口上パターン = 1400
		ENDIF
	ENDIF

;通常の汎用キャラの場合(子供以外)
ELSE
	;男性・男双
	IF GROUPMATCH(TALENT:(ARG:0):性別, 0, 3)
		CFLAG:(ARG:0):汎用口上パターン = 1100

	;女性・女双・男の娘
	;万能
	ELSEIF TALENT:(ARG:0):成長型 == 0
		CFLAG:(ARG:0):汎用口上パターン = 1200
	;知将
	ELSEIF TALENT:(ARG:0):成長型 == 1
		CFLAG:(ARG:0):汎用口上パターン = 1201
	;学士
	ELSEIF TALENT:(ARG:0):成長型 == 2
		CFLAG:(ARG:0):汎用口上パターン = 1202
	;両道
	ELSEIF TALENT:(ARG:0):成長型 == 3
		CFLAG:(ARG:0):汎用口上パターン = 1203
	;武官
	ELSEIF TALENT:(ARG:0):成長型 == 4
		CFLAG:(ARG:0):汎用口上パターン = 1204
	;軍師
	ELSEIF TALENT:(ARG:0):成長型 == 5
		CFLAG:(ARG:0):汎用口上パターン = 1205
	;文官
	ELSEIF TALENT:(ARG:0):成長型 == 6
		CFLAG:(ARG:0):汎用口上パターン = 1206
	;芸能
	ELSEIF TALENT:(ARG:0):成長型 == 7
		CFLAG:(ARG:0):汎用口上パターン = 1207
	;料理
	ELSEIF TALENT:(ARG:0):成長型 == 8
		CFLAG:(ARG:0):汎用口上パターン = 1200
	;天才
