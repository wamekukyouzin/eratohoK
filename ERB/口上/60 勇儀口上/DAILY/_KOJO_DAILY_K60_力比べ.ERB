SIF KDVAR:対象:勇儀_力比べ == -1
	RETURN 0

;勇儀が放浪してないとだめ
SIF CFLAG:対象:特殊状態 != 特殊状態_放浪
	RETURN 0

;マスターが男でないと出ない
SIF !IS_MALE(MASTER)
	RETURN 0

RETURN CHECK_KOJO_DAILY_HAPPEN(対象, 0, 0, 0)

