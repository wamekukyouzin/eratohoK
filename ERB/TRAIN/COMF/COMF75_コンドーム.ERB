	LOCALS = %ANAME(MPLY:0)%たち
ELSE
	LOCALS = %ANAME(MPLY:0)%
ENDIF
IF MTAR_NUM == 0
	LOCALS:1 = 
ELSEIF MTAR_NUM >= 2
	LOCALS:1 = %ANAME(MTAR:0)%たち
