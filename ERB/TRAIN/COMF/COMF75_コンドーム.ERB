;-------------------------------------------------
;選択可否判定
;-------------------------------------------------
@COM_ABLE75
;共通部分
CALL COM_ABLE_COMMON(75)
SIF RESULT == 0
	RETURN 0
;プレイヤーは1人以上
SIF MPLY_NUM <= 0
	RETURN 0
;プレイヤーが行動不能なら不可
SIF !IS_PLAYABLE(MPLY:0) && !FLAG:RECHECKING
	RETURN 0
FOR LOCAL, 0, MPLY_NUM
	;プレイヤーにチンポが必要
	SIF !HAS_PENIS(MPLY:(LOCAL:0))
		RETURN 0
	;プレイヤーがＰ挿入中なら不可
	SIF IS_INSERT_SINGLE(MPLY:(LOCAL:0), "Ｐ") && !FLAG:RECHECKING
		RETURN 0
	;既にゴムつけてるなら駄目
	SIF IS_EQUIP_PLAYER(MPLY:(LOCAL:0), 75)
		RETURN 0
NEXT
;コンドームが人数分必要
SIF ITEM:コンドーム < MPLY_NUM && ITEM:A_コンドーム < MPLY_NUM && !FLAG:RECHECKING
	RETURN 0
;プレイヤーが拘束中ならターゲットが必要
SIF IS_BIND(MPLY:0) && MTAR_NUM <= 0 && !FLAG:RECHECKING
	RETURN 0
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@COM75
;実行判定
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0
IF MTAR_NUM == 0
	IF MPLY_NUM >= 2
		LOCALS = %ANAME(MPLY:0)%たち
	ELSE
		LOCALS = %ANAME(MPLY:0)%
	ENDIF
	SELECTCASE GET_COM_INITIATIVE()
		CASE 0
			PRINTFORMW %LOCALS:0%はペニスにコンドームをかぶせた……
		CASE 1
			;ねぇよ
		CASE 2
			PRINTFORML %ANAME(TFLAG:45)%は%LOCALS:0%に、ペニスにコンドームを付けるよう要求した…
			PRINTFORMW %LOCALS:0%は言われるまま、自身のペニスにコンドームを取り付けた…
	ENDSELECT
ENDIF

;ローションを１つ減少させる(追加アイテム使用時は減少させない)
IF ITEM:A_コンドーム <= 0
	ITEM:コンドーム = MAX(ITEM:コンドーム - MPLY_NUM, 0)
ENDIF

;主導度変化基準値
TFLAG:49 = 1

;倒錯度変化基準値
TFLAG:50 = 0

;レズ・ＢＬ経験基準値
TFLAG:51 = 2

;経過時間を無理矢理1減らす
TFLAG:55 --

RETURN 1

