	CALL COM_ORDER_ELEMENT(ARG:0, "恥じらい", -4)
ENDIF


RETURN 1

;-------------------------------------------------
;地の文(前文)
;-------------------------------------------------
@COM_TEXT_BEFORE119

;プレイヤーが2人以上
IF MPLY_NUM >= 2
	LOCALS:0 = %ANAME(MPLY:0)%たち
;プレイヤーが１人
ELSE
	LOCALS:0 = %ANAME(MPLY:0)%
ENDIF
;ターゲットが2人以上
IF MTAR_NUM >= 2
	LOCALS:1 = %ANAME(MTAR:0)%たち
;ターゲットが1人
ELSE
	LOCALS:1 = %ANAME(MTAR:0)%
ENDIF

SELECTCASE GET_COM_INITIATIVE()
	CASE 0
	CASE 1
		IF MTAR_NUM == 1 && ABL:(MTAR:0):サド >= 3
			PRINTFORMW %LOCALS:1%は嗜虐的な笑みを浮かべ%LOCALS:0%に命令し、無理やり%STR_BODY("アナル" , MPLY:0)%を指先で開かせ%PLAYER_STR("た", "てきた")%…
		ELSEIF MTAR_NUM == 1 && ABL:(MTAR:0):主導度Ｕ < 100
			PRINTFORMW %LOCALS:1%は少し緊張した様子で%LOCALS:0%に命令し、%STR_BODY("アナル" , MPLY:0)%を指先で開かせた…
		ELSE
			PRINTFORMW %LOCALS:1%は%LOCALS:0%に命令し、%STR_BODY("アナル" , MPLY:0)%を指先で開かせた…
		ENDIF
	;第三者に主導権
	CASEELSE
		PRINTFORML %ANAME(TFLAG:45)%は%LOCALS:0%に、%LOCALS:1%に%STR_BODY("アナル" , MPLY:0)%を指先で開くように命令した
ENDSELECT

PRINTFORM %ANAME(MPLY:(LOCAL:0), MPLY_NUM)%は、
SELECTCASE ABL:(MPLY:0):露出
	CASE IS < ランク閾値:ランク_その他:ランク_E
		PRINTFORM 羞恥で顔を赤く染めながら
	CASE IS < ランク閾値:ランク_その他:ランク_C
		PRINTFORM 戸惑いを感じつつも
	CASE IS < ランク閾値:ランク_その他:ランク_A
		PRINTFORM 悦びを感じながら
	CASEELSE
		PRINTFORM 見られる興奮に愛液を滴らせながら
ENDSELECT

PRINTFORMW %STR_BODY("アナル" , MPLY:0)%を指先で割り開いてみせた……


@COM_TEXT_LAST119
FOR LOCAL:0, 0, MPLY_NUM
	LOCAL:1 = MPLY:(LOCAL:0)
	SIF CUM_GET_AMOUNT:(LOCAL:1):射精部位_アナル > 0
		PRINTFORML 中出しを受けた%ANAME(LOCAL:1)%の%STR_BODY("アナル", LOCAL:1)%から、白いものがとろりと溢れた……
NEXT

