@COM_ABLE70
;共通部分
CALL COM_ABLE_COMMON(70)
SIF RESULT == 0
	RETURN 0
;プレイヤーは最大で1人まで
SIF MPLY_NUM <= 0 || MPLY_NUM > 1
	RETURN 0
;ターゲットがいること
SIF MTAR_NUM <= 0
	RETURN 0
;ローションが人数分必要
SIF ITEM:ローション < MTAR_NUM && ITEM:A_ローション < MTAR_NUM
	RETURN 0
FOR LOCAL, 0, MTAR_NUM
	;ターゲットがＶＡ挿入中なら不可
	SIF IS_INSERT_SINGLE(MTAR:(LOCAL:0), "ＶＡ")
		RETURN 0
	SIF !CAN_REACH_BODY(MPLY:0, MTAR:0)
		RETURN 0
NEXT

RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@COM70
