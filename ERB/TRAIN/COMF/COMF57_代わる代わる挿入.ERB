	CALL VIRGIN_COMMON(LOCAL:2, @"%ANAME(MPLY:0)%たち", (GET_SITUATION_BY_TRAIN_MODE() == 喪失_和姦 ? 喪失_乱交 # 喪失_輪姦))

	;性交系の共通処理
	CALL COM_COMMON_SEX_V(LOCAL:2, LOCAL:3)
	CALL TIGHTNESS_DECREASE_V(LOCAL:2, MPLY_NUM / 2)
	;主導権に応じた優越・屈従のソース追加
	CALL ADD_SOURCE_INITIATIVE_U(LOCAL:2, 150, 100)

	;奉仕経験値を得られるコマンドのフラグ
	TCVAR:(LOCAL:2):4 = 1

	;ターゲットのＶ⇔プレイヤーのＰの汚れが移動
