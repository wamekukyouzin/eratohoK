@COM_ABLE57
;共通部分
CALL COM_ABLE_COMMON(57)
SIF RESULT == 0
	RETURN 0
;プレイヤーは2人以上
SIF MPLY_NUM < 2
	RETURN 0
;ターゲットは1人以上
SIF MTAR_NUM < 1
	RETURN 0

;全てのプレイヤーについて処理
FOR LOCAL:0, 0, MPLY_NUM
	;プレイヤーとターゲットのうち両方に行動不能または拘束中のキャラがいるなら不可
	IF !IS_PLAYABLE(MPLY:(LOCAL:0)) || IS_BIND(MPLY:(LOCAL:0))
		FOR LOCAL:1, 0, MTAR_NUM
			IF !IS_PLAYABLE(MTAR:(LOCAL:1)) || IS_BIND(MTAR:(LOCAL:1))
				RETURN 0
			ENDIF
		NEXT
	ENDIF

	;プレイヤーに竿がなく、ペニスバンド装着中でもないと不可
	SIF !HAS_PENIS(MPLY:(LOCAL:0)) && !IS_EQUIP_PLAYER((MPLY:(LOCAL:0)), 50)
		RETURN 0
	;プレイヤーが顔面騎乗されているなら不可
	SIF IS_RIDDEN(MPLY:(LOCAL:0))
		RETURN 0
	;プレイヤーが顔面騎乗中なら不可
	SIF IS_RIDE(MPLY:(LOCAL:0))
		RETURN 0
	;プレイヤーが各種奉仕を受けている・各種奉仕を行っているなら不可
	SIF IS_EQUIP(MPLY:(LOCAL:0), 1, 2, 3, 4, 20, 21, 22) || IS_EQUIP(MPLY:(LOCAL:0), 10, 11, 12, 13, 14, 15, 16, 17) || IS_EQUIP(MPLY:(LOCAL:0), 87, 88, 90, 103, 104, 106, 107)
		RETURN 0
	;プレイヤーが触手オナホされているなら不可
	SIF IS_EQUIP_TARGET(MPLY:(LOCAL:0), 205)
		RETURN 0
	;プレイヤーが土下座しているなら不可
	SIF IS_EQUIP_PLAYER(MPLY:(LOCAL:0), 110)
		RETURN 0
	;プレイヤーがセルフオナホ中ならダメ
	SIF IS_EQUIP_PLAYER(MPLY:(LOCAL:0), 116)
		RETURN 0
NEXT

;全てのターゲットについて処理
FOR LOCAL:0, 0, MTAR_NUM
	;Ｖが必要
	SIF !HAS_VAGINA(MTAR:(LOCAL:0))
		RETURN 0
	;Ｖが埋まっているなら不可
	SIF IS_V_HOLD(MTAR:(LOCAL:0))
		RETURN 0
	;プレイヤーとターゲットの挿入関係を取得
	LOCAL:1 = IS_INSERT_MUTUAL(MPLY:0, MTAR:(LOCAL:0))
	;ターゲットからプレイヤーに挿入中なら不可
	SIF LOCAL:1 == 3 || LOCAL:1 == 4
		RETURN 0
	;顔面騎乗中なら不可
	SIF IS_RIDE(MTAR:(LOCAL:0))
		RETURN 0
	;クンニされているなら不可
	SIF IS_EQUIP_TARGET(MTAR:(LOCAL:0), 2)
		RETURN 0
	;貝合わせ中・双頭バイブ使用中なら不可
	SIF IS_EQUIP(MTAR:(LOCAL:0), 21, 22)
		RETURN 0
NEXT
RETURN 1

