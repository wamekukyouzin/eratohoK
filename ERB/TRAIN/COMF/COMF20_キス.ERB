;キス

;-------------------------------------------------
;コマンド名称
;-------------------------------------------------
@COM_NAME20
IF MTAR_NUM >= 2 || MPLY_NUM >= 2
	LOCALS:0 = Ｗキス
ELSE
	LOCALS:0 = キス
ENDIF

RESULTS:0 = %LOCALS:0%する
RESULTS:1 = %LOCALS:0%させられる
RESULTS:2 = %LOCALS:0%させる
RESULTS:3 = %LOCALS:0%される
RESULTS:4 = %LOCALS:0%させる
RESULTS:5 = %LOCALS:0%見せつけ

;-------------------------------------------------
;選択可否判定
;-------------------------------------------------
@COM_ABLE20
;共通部分
CALL COM_ABLE_COMMON(20)
SIF RESULT == 0
	RETURN 0
;プレイヤーは最大で2人まで
SIF MPLY_NUM <= 0 || MPLY_NUM > 2
	RETURN 0
;ターゲットは最大で2人まで
SIF MTAR_NUM <= 0 || MTAR_NUM > 2
	RETURN 0
;2-2は不可
SIF MPLY_NUM == 2 && MTAR_NUM == 2
	RETURN 0

LOCAL:2 = 0
;全プレイヤーについて判定
FOR LOCAL:0, 0, MPLY_NUM
	;プレイヤーが行動不能なら不可
	SIF !IS_PLAYABLE(MPLY:(LOCAL:0))
		RETURN 0
	;挿入中はプレイヤーが一人の場合のみ許可
	SIF IS_INSERT_SINGLE(MPLY:(LOCAL:0), "全") && MPLY_NUM >= 2
		RETURN 0
	;ターゲットの口が塞がっているなら不可
	SIF IS_M_HOLD(MPLY:(LOCAL:0))
		RETURN 0
	;プレイヤーがパイズリ中なら不可
	SIF IS_EQUIP_PLAYER(MPLY:(LOCAL:0), 12, 104)
		RETURN 0
	;口枷装着中なら不可
	SIF IS_EQUIP_TARGET(MPLY:(LOCAL:0), 86)
		RETURN 0
	;プレイヤーが拘束中なら不可
	SIF IS_BIND(MPLY:(LOCAL:0))
		RETURN 0
	;プレイヤーが土下座しているなら不可
	SIF IS_EQUIP_PLAYER(MPLY:(LOCAL:0), 110)
		RETURN 0
	;全ターゲットについて判定
	FOR LOCAL:1, 0, MTAR_NUM
		;プレイヤーとターゲットが相互に貝合わせ中なら不可
		SIF SEARCH_EQUIP_IC(21, MPLY:(LOCAL:0), MTAR:(LOCAL:1)) >= 0
			RETURN 0
		;プレイヤーとターゲットが相互に双頭バイブで結合中なら不可
		SIF SEARCH_EQUIP_IC(22, MPLY:(LOCAL:0), MTAR:(LOCAL:1)) >= 0
			RETURN 0
		;プレイヤーからターゲット／ターゲットからプレイヤーに尻コキ中なら不可
		SIF SEARCH_EQUIP_IC(15, MPLY:(LOCAL:0), MTAR:(LOCAL:1)) >= 0
			RETURN 0
		;プレイヤーからターゲット／ターゲットからプレイヤーに電気按摩中なら不可
		SIF SEARCH_EQUIP_IC(103, MPLY:(LOCAL:0), MTAR:(LOCAL:1)) >= 0
			RETURN 0
	NEXT
NEXT
;全ターゲットについて判定
FOR LOCAL:0, 0, MTAR_NUM
	;挿入中はターゲットが一人の場合のみ許可
	SIF IS_INSERT_SINGLE(MTAR:(LOCAL:0), "全") && MTAR_NUM >= 2
		RETURN 0
	;ターゲットが土下座しているなら不可
	SIF IS_EQUIP_PLAYER(MTAR:(LOCAL:0), 110)
		RETURN 0
	;ターゲットの口が塞がっているなら不可
	SIF IS_M_HOLD(MTAR:(LOCAL:0))
		RETURN 0
	;行動不能の判定
	SIF !IS_PLAYABLE(MTAR:(LOCAL:0))
		LOCAL:2 ++
NEXT
;２人以上のターゲットが行動不能の場合は不可
SIF LOCAL:2 >= 2
	RETURN 0
;１人が行動不能の場合は1-1以外不可
SIF LOCAL:2 && (MPLY_NUM >= 2 || MTAR_NUM >= 2)
	RETURN 0
RETURN 1

