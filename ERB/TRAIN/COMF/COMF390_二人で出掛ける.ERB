@PARTNER_SELECT_DATE
;選択可能なデート先のリストを作成
LOCAL:1 = 0
FOR LOCAL:0, 1, 50
	IF GET_PLACENAME(LOCAL:0) != "" && LOCAL:0 != TFLAG:54
		;場所ごとの条件判定
		TRYCCALLFORM DATE_PLACE_ABLE{LOCAL:0}
			IF !RESULT
				CONTINUE
			ENDIF
		CATCH
		ENDCATCH

		LOCAL:(LOCAL:1 + 10) = LOCAL:0
		LOCAL:1 ++
	ENDIF
NEXT

;リストからランダムなものを選んで返す
RETURN LOCAL:(RAND:(LOCAL:1) + 10)

