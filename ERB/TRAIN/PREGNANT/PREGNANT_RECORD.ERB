@SHOW_WOMB_SEMEN(ARG:0)
#DIM 表示
#DIM 総量
#DIM FIRST_LINE

総量 = SUM_WOMB_SEMEN_AMOUNT(ARG:0)

CALL COLOR_LINE
PRINTFORM 〇%ANAME(ARG:0)%の子宮内の精液〇 
CALL PRINT_GRADATIONBAR(MIN(総量, CALC_WOMB_SIZE(ARG:0)), CALC_WOMB_SIZE(ARG:0), 10, 0xFFEDB8, , 1)
PRINTFORML  {総量}/{CALC_WOMB_SIZE(ARG:0)}ml 

FIRST_LINE = LINECOUNT

FOR LOCAL:0, 0, WOMB_RECORD_MAX
	SIF WOMB_SEMEN_ID:(ARG:0):(LOCAL:0) == 0
		CONTINUE
	PRINTFORM %GET_SPERM_NAME(WOMB_SEMEN_ID:(ARG:0):(LOCAL:0)), MAX_CHARANAME_LENGTH, LEFT%:
	PRINTFORML {WOMB_SEMEN_AMOUNT:(ARG:0):(LOCAL:0), 5, RIGHT} ml({WOMB_SEMEN_COUNT:(ARG:0):(LOCAL:0)}発分)
NEXT

SIF FIRST_LINE == LINECOUNT
	PRINTFORML なし

;---------------------------------------------------------
;子宮内の精液量を合算する
;---------------------------------------------------------
@SUM_WOMB_SEMEN_AMOUNT(対象)
#FUNCTION
#DIM 対象
#DIM 総量
総量 = 0
FOR LOCAL:0, 0, WOMB_RECORD_MAX
	SIF WOMB_SEMEN_ID:対象:LOCAL == 0
		CONTINUE
	総量 += WOMB_SEMEN_AMOUNT:対象:LOCAL
NEXT

RETURNF 総量

;---------------------------------------------------------
;子宮内の精液量を調整する
;---------------------------------------------------------
@CUT_WOMB_SEMEN_AMOUNT(対象)
#DIM 対象
#DIM 総量
#DIM 子宮サイズ
#DIM 余剰

総量 = SUM_WOMB_SEMEN_AMOUNT(対象)
子宮サイズ = CALC_WOMB_SIZE(対象)
余剰 = 総量 - 子宮サイズ


SIF 余剰 <= 0
	RETURN 0

FOR LOCAL, 0, WOMB_RECORD_MAX
	SIF WOMB_SEMEN_ID:対象:LOCAL == 0
		CONTINUE

	WOMB_SEMEN_AMOUNT:対象:LOCAL -= 余剰 * (WOMB_SEMEN_AMOUNT:対象:LOCAL * 100 / 総量) / 100 + 1

	IF WOMB_SEMEN_AMOUNT:対象:LOCAL <= 0
		WOMB_SEMEN_ID:対象:LOCAL = 0
		WOMB_SEMEN_AMOUNT:対象:LOCAL = 0
		WOMB_SEMEN_COUNT:対象:LOCAL = 0
		WOMB_SEMEN_TIME:対象:LOCAL = 0
	ENDIF
NEXT

