;--------------------------------------------------------
;Looks backward through character # ARG:0's lineage for the first fixed (non-master) character found
;ARG:1 is a flag for checking animals
;returns character #
;-1 Default
;-2 Dog
;-3 Pig
;-4 Horse
;-5 Monkey
;--------------------------------------------------------
@LINEAGE_TO_FIXED(ARG:0, ARG:1 = 0)
#FUNCTION
#DIM BRANCH, 100
#DIM BLACKLIST, 1000
#DIM BRANCH_P
#DIM BLACKLIST_P

VARSET BRANCH, -1
VARSET BLACKLIST, -1
BRANCH_P = 0
BLACKLIST_P = 0

BRANCH:BRANCH_P = ARG:0


WHILE BRANCH_P != -1 && BRANCH_P < VARSIZE("BRANCH") && BLACKLIST_P < VARSIZE("BLACKLIST")
	IF IS_FIXED_CHARA(BRANCH:BRANCH_P) && BRANCH:BRANCH_P != 0
		;found a fixed character
		RETURNF BRANCH:BRANCH_P
	ELSEIF ARG:1 && (CFLAG:(BRANCH:BRANCH_P):父親 != 0) && (CFLAG:(BRANCH:BRANCH_P):父親 == GET_SPERM_ID("犬") || TALENT:(BRANCH:BRANCH_P):動物 == 動物_犬)
		;dog, or dog father
		RETURNF -2
	ELSEIF ARG:1 && (CFLAG:(BRANCH:BRANCH_P):父親 != 0) && (CFLAG:(BRANCH:BRANCH_P):父親 == GET_SPERM_ID("豚") || TALENT:(BRANCH:BRANCH_P):動物 == 動物_豚)
		;pig, or pig father
		RETURNF -3
	ELSEIF ARG:1 && (CFLAG:(BRANCH:BRANCH_P):父親 != 0) && (CFLAG:(BRANCH:BRANCH_P):父親 == GET_SPERM_ID("馬") || TALENT:(BRANCH:BRANCH_P):動物 == 動物_馬)
		;horse, or horse father
		RETURNF -4
	ELSEIF ARG:1 && (CFLAG:(BRANCH:BRANCH_P):父親 != 0) && (CFLAG:(BRANCH:BRANCH_P):父親 == GET_SPERM_ID("猿") || TALENT:(BRANCH:BRANCH_P):動物 == 動物_猿)
		;monkey, or monkey father
		RETURNF -5
	ELSEIF (ID_TO_CHARA(CFLAG:(BRANCH:BRANCH_P):母親) == -1 || MATCH(BLACKLIST, ID_TO_CHARA(CFLAG:(BRANCH:BRANCH_P):母親))) && (ID_TO_CHARA(CFLAG:(BRANCH:BRANCH_P):父親) == -1 || MATCH(BLACKLIST, ID_TO_CHARA(CFLAG:(BRANCH:BRANCH_P):父親)))
		;both mother and father are blacklisted or null so blacklist this character and step back to the last branch
		BLACKLIST:BLACKLIST_P = BRANCH:BRANCH_P
		BLACKLIST_P ++
		BRANCH_P --
	ELSEIF ID_TO_CHARA(CFLAG:(BRANCH:BRANCH_P):母親) == -1 || MATCH(BLACKLIST, ID_TO_CHARA(CFLAG:(BRANCH:BRANCH_P):母親))
		;mother is blacklisted or null so continue down father path
		BRANCH:(BRANCH_P+1) = ID_TO_CHARA(CFLAG:(BRANCH:BRANCH_P):父親)
		BRANCH_P ++
	ELSE
		;mother available so continue down that path
		BRANCH:(BRANCH_P+1) = ID_TO_CHARA(CFLAG:(BRANCH:BRANCH_P):母親)
		BRANCH_P ++
	ENDIF
WEND

RETURNF -1
