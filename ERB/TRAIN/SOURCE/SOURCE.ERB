;調教ソースの表示
;-------------------------------------------------
@SHOW_SOURCE(ARG:0)
LOCAL:2 = 0

FOR LOCAL:0, 0, 100
	;SOURCEの並び設定を取得
	LOCAL:1 = GET_SORTED_SOURCE(LOCAL:0)
	IF LOCAL:1 >= 0 && SOURCE:(ARG:0):(LOCAL:1) > 0
		IF !LOCAL:2
			LOCAL:2 = 1
			PRINTFORM %ANAME(ARG:0), 8%:
		ENDIF
		PRINTFORM %SOURCENAME:(LOCAL:1)%({SOURCE:(ARG:0):(LOCAL:1)})
	ENDIF
NEXT
IF LOCAL:2
	PRINTL 
ENDIF
