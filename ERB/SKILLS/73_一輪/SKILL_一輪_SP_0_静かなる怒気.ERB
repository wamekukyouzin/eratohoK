@SKILL_73_SP_0_EXIST
RETURN 1

@SKILL_73_SP_0_NAME
RESULTS = 静かなる怒気

;レベルは1-5まで
@SKILL_73_SP_0_LEVEL
RETURN 3

;対象選択
@SKILL_73_SP_0_SETTARGET(発動者, 発動番号, 発動側, 発動勢力, 発動部隊, 対象勢力, 対象部隊)
#DIM 発動者
#DIM 発動番号
#DIM スキル
#DIMS ジャンル
#DIM 発動側
#DIM 発動勢力
#DIM 発動部隊
#DIM 対象側
#DIM 対象勢力
#DIM 対象部隊
#DIM 能力, 3
VARSET 能力

COMBAT_SKILL_TARGET = 発動番号
RETURN 1

;発動判定
@SKILL_73_SP_0_CAN_INVOKE(発動者, 発動番号, 発動側, 発動勢力, 発動部隊, 対象勢力, 対象部隊)
#DIM 発動者
#DIM 発動番号
#DIM スキル
#DIMS ジャンル
#DIM 発動側
#DIM 発動勢力
#DIM 発動部隊
#DIM 対象側
#DIM 対象勢力
#DIM 対象部隊
対象側 = !発動側

RETURN 1

;効果をここに記述
@SKILL_73_SP_0_INVOKE(発動者, 発動番号, 発動側, 発動勢力, 発動部隊, 対象勢力, 対象部隊)
#DIM 発動者
#DIM 発動番号
#DIM スキル
#DIMS ジャンル
#DIM 発動側
#DIM 発動勢力
#DIM 発動部隊
#DIM 対象側
#DIM 対象勢力
#DIM 対象部隊
対象側 = !発動側
PRINTFORML %ANAME(発動者)%の武闘が増加した！
IF SKILL_73_SP_0_CHECK_COMMANDER()
	TIMES BATTLE_武闘パワー:発動側:COMBAT_SKILL_TARGET, 1.2
ELSE
	TIMES BATTLE_武闘パワー:発動側:COMBAT_SKILL_TARGET, 1.1
ENDIF
RETURN 1

;
@SKILL_73_SP_0_EXPLANATION
RESULTS = 自身の武闘を増加させる。雲山がいると発動率・効果上昇。


@SKILL_73_SP_0_CHECK_COMMANDER(発動者, 発動番号, 発動側, 発動勢力, 発動部隊, 対象勢力, 対象部隊)
#FUNCTION
#DIM 発動者
#DIM 発動番号
#DIM スキル
#DIMS ジャンル
#DIM 発動側
#DIM 発動勢力
#DIM 発動部隊
#DIM 対象側
#DIM 対象勢力
#DIM 対象部隊
FOR LOCAL, 0, BATTLE_COMMANDER_NUM:発動側
	IF BATTLE_COMMANDER:発動側:LOCAL == NAME_TO_CHARA("雲山")
		RETURNF 1
	ENDIF
NEXT
RETURNF 0


@SKILL_73_SP_0_RATE_SHOW
RESULTS = 200
