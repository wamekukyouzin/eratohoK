@SKILL_5_PERSONAL_0_EXIST
RETURN 1

@SKILL_5_PERSONAL_0_NAME
SELECTCASE SKILL_5_PERSONAL_0_CHECK_POWER()
	CASE 1
		RESULTS = アイシクルフォール -EASY-
	CASE 2
		RESULTS = アイシクルフォール -NORMAL-
	CASE 3
		RESULTS = アイシクルフォール -HARD-
	CASE 4
		RESULTS = アイシクルフォール -LUNATIC-
	CASEELSE
		RESULTS = アイシクルフォール -EASY-
ENDSELECT

;能力次第でレベルを変動させる
;2-5
@SKILL_5_PERSONAL_0_LEVEL
RETURN SKILL_5_PERSONAL_0_CHECK_POWER() + 1

