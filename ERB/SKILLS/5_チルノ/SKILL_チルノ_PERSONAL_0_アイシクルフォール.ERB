@SKILL_5_PERSONAL_0_CHECK_POWER
#FUNCTION
#DIM チルノ
チルノ = NAME_TO_CHARA("チルノ")
SIF チルノ == -1
	RETURNF 0
SELECTCASE ABL:チルノ:武闘 + ABL:チルノ:知略 + ABL:チルノ:政治 + ABL:チルノ:防衛
	CASE IS < 150
		RETURNF 1
	CASE IS < 250
		RETURNF 2
	CASE IS < 300
		RETURNF 3
	CASEELSE
		RETURNF 4
ENDSELECT

