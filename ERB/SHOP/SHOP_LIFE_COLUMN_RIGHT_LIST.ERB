FOR LOCAL:0, 0, CHARANUM
	NOW_CHECK_CHARA_BOTTOM = SHOP_CHARA_LIST:(LOCAL:0)
	SIF NOW_CHECK_CHARA_BOTTOM == -1
		CONTINUE
	;選択可能な条件を満たしているかどうかを判定
