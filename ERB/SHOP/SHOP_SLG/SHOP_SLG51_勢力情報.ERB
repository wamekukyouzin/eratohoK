	CALL SINGLE_DRAWLINE
	PRINTFORM %"★" + ANAME(GET_COUNTRY_BOSS(SELECTED))+ "★", 20, LEFT% 評価:
	CALL TMP_PRINT_COUNTRY_STARS(SELECTED)
