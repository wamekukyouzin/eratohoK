@ARENA_GET_POWER(対象)
#FUNCTION
#DIM 対象
RETURNF MAX(ABL:対象:武闘 + ABL:対象:防衛, ABL:対象:武闘 + ABL:対象:知略, ABL:対象:防衛 + ABL:対象:知略, 1)

;-------------------------------------------------
;「闘技場」賞金算出
;-------------------------------------------------
@ARENA_CALC_MONEY(対象, 敵戦闘力)
#FUNCTION
#DIM 対象
#DIM 戦闘力
#DIM 敵戦闘力
#DIM 実力比
#DIM 賞金
戦闘力 = ARENA_GET_POWER(対象)
実力比 = 敵戦闘力 * 100 / 戦闘力
賞金 = 5000 + 敵戦闘力 * 50 * RAND(80, 120) / 100
SIF 実力比 > 100
	賞金 = 賞金 * 実力比 / 100
RETURNF 賞金

;-------------------------------------------------
