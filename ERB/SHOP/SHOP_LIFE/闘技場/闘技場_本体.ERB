	CALL PRINT_ADD_EXP(対象, "防衛経験値", 獲得経験値:1, 1)
SIF 獲得経験値:2 > 0
	CALL PRINT_ADD_EXP(対象, "知略経験値", 獲得経験値:2, 1)
