;-------------------------------------------------
;「捕虜の扱い」の名称
;-------------------------------------------------
@SHOP_LIFE_NAME33
RESULTS:0 '= "捕虜の扱い"

;-------------------------------------------------
;「捕虜の扱い」の選択可否判定
;-------------------------------------------------
@SHOP_LIFE_CHECK33
SIF CONFIG:7 != 1
	RETURN 0
SIF CFLAG:MASTER:捕虜先
	RETURN 0
SIF !CFLAG:MASTER:所属
	RETURN 0
RETURN 1

;-------------------------------------------------
;「捕虜の扱い」の選択可能キャラ存在判定
;-------------------------------------------------
@SHOP_LIFE_CHECKCHARA33(ARG:0)
;主人公ならだめ
SIF ARG:0 == MASTER
	RETURN 0

;主人公勢力の捕虜、あるいは外交調教の対象
RETURN CFLAG:(ARG:0):捕虜先 == CFLAG:MASTER:所属 || CFLAG:(ARG:0):外交調教経過ターン

RETURN 0

;-------------------------------------------------
;「捕虜の扱い」の入力処理
;-------------------------------------------------
@SHOP_LIFE_EVENTBUY33
FLAG:拠点フェイズページ = 1
FLAG:夜這い = 0
RETURN 0

;-------------------------------------------------
;「捕虜の扱い」の右カラムボタン入力値をキャラ番号に変換する処理のオフ判定
;-------------------------------------------------
@SHOP_LIFE_USERSHOP_COLUMN_RIGHT_CONVERT_CHARANUM_OFF_CHECK33

;-------------------------------------------------
;「捕虜の扱い」の右カラムキャラリスト１のボタン
;-------------------------------------------------
@SHOP_LIFE_LIST1_BUTTON33(ARG:0, ARG:1)
#DIM SYOKUSYU_FLAG
;触手調教選択可否
SYOKUSYU_FLAG = ITEM:触手部屋 && ID_TO_CHARA(FLAG:触手部屋管理者) >= 0 && IS_SYOKUSYU_MANAGE(ID_TO_CHARA(FLAG:触手部屋管理者))

CALL COLUMN_RIGHT_LINE
CALL COLUMN_RIGHT_PRINTL

PRINTFORM %SNAME(ARG:0), MAX_CHARANAME_LENGTH / 2, LEFT%
CALL SHOP_LIFE_BUTTON33(ARG:0, CFLAG:(ARG:0):軟禁中 == 0 && CFLAG:(ARG:0):捕虜の扱い == 0, 1, "監禁")
CALL SHOP_LIFE_BUTTON33(ARG:0, CFLAG:(ARG:0):軟禁中 == 1 && CFLAG:(ARG:0):捕虜の扱い == 0, 2, "軟禁")
CALL SHOP_LIFE_BUTTON33(ARG:0, CFLAG:(ARG:0):軟禁中 == 0 && CFLAG:(ARG:0):捕虜の扱い == 2, 3, "拷問")
CALL SHOP_LIFE_BUTTON33(ARG:0, CFLAG:(ARG:0):軟禁中 == 0 && CFLAG:(ARG:0):捕虜の扱い == 3, 4, "Ｃ開発")
CALL SHOP_LIFE_BUTTON33(ARG:0, CFLAG:(ARG:0):軟禁中 == 0 && CFLAG:(ARG:0):捕虜の扱い == 4, 5, "Ｂ開発")
CALL SHOP_LIFE_BUTTON33(ARG:0, CFLAG:(ARG:0):軟禁中 == 0 && CFLAG:(ARG:0):捕虜の扱い == 5, 6, "性処理")
IF SYOKUSYU_FLAG
	CALL SHOP_LIFE_BUTTON33(ARG:0, CFLAG:(ARG:0):軟禁中 == 0 && CFLAG:(ARG:0):捕虜の扱い == 6, 7, "触手")
ENDIF
CALL SHOP_LIFE_BUTTON33(ARG:0, CFLAG:(ARG:0):軟禁中 == 0 && CFLAG:(ARG:0):捕虜の扱い == 7, 8, "娼館")
CALL SHOP_LIFE_BUTTON33(ARG:0, CFLAG:(ARG:0):軟禁中 == 0 && CFLAG:(ARG:0):捕虜の扱い == 8, 9, "搾乳")
CALL COLUMN_RIGHT_PRINTL

SETCOLOR カラー_注釈
PRINTFORM 精神力:
RESETCOLOR
CALL PRINT_GRADATIONBAR(BASE:(ARG:0):精神力, MAXBASE:(ARG:0):精神力, 10, 0x5E9AFF)
SETCOLOR カラー_注釈
;精神力1/3以下なら強調
SIF BASE:(ARG:0):精神力 <= MAXBASE:(ARG:0):精神力 / 3
	SETCOLOR カラー_選択中
PRINTFORM {BASE:(ARG:0):精神力,6, RIGHT}
SETCOLOR カラー_注釈
PRINTFORM /{MAXBASE:(ARG:0):精神力, 6, RIGHT}

PRINTPLAIN   
CALL COLORPRINT("状態:", カラー_注釈)
IF TALENT:(ARG:0):崩壊
	CALL COLORPRINT("崩壊", 0xF03333)
ELSEIF TALENT:(ARG:0):虚ろ
	CALL COLORPRINT("虚ろ", 0xEE4833)
ELSE
	CALL COLORPRINT("健康", カラー_注釈)
ENDIF

SETCOLOR カラー_注釈
PRINTPLAIN   
IF CFLAG:(ARG:0):所属
	PRINTFORM 所属:%ANAME(GET_COUNTRY_BOSS(CFLAG:(ARG:0):所属)), MAX_CHARANAME_LENGTH , LEFT%
ELSE
	PRINTFORM 所属:%@"未所属", MAX_CHARANAME_LENGTH , LEFT%
ENDIF
RESETCOLOR

PRINTPLAIN   
CALL PRINT_SEX(ARG:0, 1)

PRINTPLAIN  
CALL TMP_PRINT_CHARA_STARS_NUM(ARG:0)

RETURN 0

