					CASE GETNUM(ITEM, "猿")
						CALL ADD_ANIMAL(CFLAG:MASTER:所属, 動物_猿)
				ENDSELECT
				RESTART
			ELSE
				CALL SELECT_ITEM_USER(LOCAL:2)
				IF RESULT
					MONEY -= LOCAL:3
				ENDIF
				RESTART
			ENDIF
		ENDIF

	;開発アイテム
