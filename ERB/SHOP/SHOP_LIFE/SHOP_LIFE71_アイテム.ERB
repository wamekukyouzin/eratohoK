		ELSEIF LOCAL:2 >= 280 && LOCAL:2 < 300
			IF GROUPMATCH(LOCAL:2, GETNUM(ITEM, "犬"), GETNUM(ITEM, "豚"), GETNUM(ITEM, "馬"), GETNUM(ITEM, "猿"))
				PRINTFORMW %TOSTR_SPACE(6)%%ITEMNAME:(LOCAL:2)%を購入しました
