	FOR スキルID, 0, MAX_SKILL_SLOT
		SIF スキル数:ジャンル >= MAX_SKILLS
			BREAK
		SIF SKILL_ID_SLOT:父:ジャンル:スキルID == -1
			CONTINUE
		SIF SKILL_NO_SLOT:父:ジャンル:スキルID == -1
			CONTINUE
