;あと父親がNO0の場合もキャンセル　これは汎用スキル覚えてしまうので

SIF 母 < 0
	GOTO MOTHER_CANCEL

FOR ジャンル, 0, SKILL_GENRE_NUM
	FOR スキルID, 0, MAX_SKILL_SLOT
		SIF スキル数:ジャンル >= MAX_SKILLS
			BREAK
		SIF SKILL_ID_SLOT:母:ジャンル:スキルID == -1
			CONTINUE
		SIF SKILL_NO_SLOT:母:ジャンル:スキルID == -1
			CONTINUE
