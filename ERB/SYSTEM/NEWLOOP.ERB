	FLAG:OP選択勢力 = -1
	FLAG:観戦モード = 1
	TIME = 1
	PRINTFORMW 観戦モードで開始します
	RETURN 1
ELSEIF RESULT == 99
	FLAG:OP選択勢力 = 0
	TIME = 1
	PRINTFORMW 放浪状態から開始します
	RETURN 1
ELSEIF RESULT == 100 && GET_NEW_COUNTRY() != -1
	FLAG:OP選択勢力 = -3
	CALL SP_COUNTRY_START_SELECT()
	IF RESULT == 0
		FLAG:OP選択勢力 = 0
		RETURN 0
	ENDIF
	RETURN 1
ELSEIF RESULT == 101 && GET_NEW_COUNTRY() != -1
	FLAG:OP選択勢力 = -4
	PRINTFORMW 旗揚げして開始します
	RETURN 1
ELSEIF RESULT == 999
	RETURN 0
;都市をクリック
ELSEIF RESULT >= 1000 && RESULT < 1000 + MAX_CITY
	LOCAL:3 = RESULT - 1000
	LOCAL:4 = CITY_OWNER:(LOCAL:3)
	IF IS_COUNTRY(LOCAL:4)
		選択勢力 = LOCAL:4
		CLEARLINE LINECOUNT - FIRST_LINE
		GOTO SHOW_LOOP
	ELSEIF GET_RELAYNAME(LOCAL:3) != "無名" && LOCAL:4 == 0
		選択勢力 = 0
		CLEARLINE LINECOUNT - FIRST_LINE
		GOTO SHOW_LOOP
	ENDIF
ENDIF
CLEARLINE 1
GOTO INPUT_LOOP

