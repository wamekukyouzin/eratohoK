		CATCH
			$SELECTABLE
			FLAG:OP選択勢力 = 選択勢力
			PRINTFORMW %ANAME(ボス)%勢力で開始します
			RETURN 1
		ENDCATCH
	ENDIF
ELSEIF RESULT == 97
	CALL FISHER_YATES_SHAFFLE(MAX_COUNTRY)
	FOR LOCAL, 0, MAX_COUNTRY
		選択勢力 = SHAFFLE_ARRAY:LOCAL
		SIF !IS_COUNTRY(選択勢力)
			CONTINUE
		ボス = GET_COUNTRY_BOSS(選択勢力)
		TRYCCALLFORM IS_COUNTRY_PLAYABLE_%SCENARIOID%(選択勢力)
			SIF RESULT
				GOTO SELECTABLE
		CATCH
			GOTO SELECTABLE
		ENDCATCH
	NEXT
