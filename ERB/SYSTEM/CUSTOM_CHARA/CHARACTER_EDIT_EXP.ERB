@CHARACTER_EDIT_UI_EXP(対象)
#DIM 対象
LOCAL:1 = 0
FOR LOCAL, 0, VARSIZE("EXP")
	SIF EXPNAME:LOCAL == "" || STRFIND(EXPNAME:LOCAL, "経験値") != -1
		CONTINUE
	PRINTBUTTON @"% "[" + EXPNAME:LOCAL + "]" , 15, LEFT%:", LOCAL

	PRINTFORM  {EXP:対象:LOCAL, 5, RIGHT} 
	LOCAL:1 ++
	SIF LOCAL:1 != 0 && LOCAL:1 % 4 == 0
		PRINTL
NEXT
PRINTL

@CHARACTER_EDIT_INPUT_EXP(対象, 入力値)
#DIM 対象
#DIM 入力値

SIF !INRANGE(入力値, 0, VARSIZE("EXP") - 1) || STRFIND(EXPNAME:入力値, "経験値") != -1
	RETURN 0

PRINTFORML 値を入力 現在値{EXP:対象:入力値} 
PRINTFORML (%EXPNAME:入力値%を編集中)

INPUT

SIF RESULT >= 0
	EXP:対象:入力値 = RESULT
