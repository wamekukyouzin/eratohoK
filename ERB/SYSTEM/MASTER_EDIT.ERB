		INPUTS
		CSTR:対象:0 = %RESULTS%
	CASE 1
		PRINTFORML 名を入力
		INPUTS
		CSTR:対象:1 = %RESULTS%
		NAME:対象 = %RESULTS%
		CALLNAME:対象 = %RESULTS%
	CASE 2
		PRINTFORML 愛称を入力
		INPUTS
		CSTR:対象:98 = %RESULTS%
ENDSELECT


