VARSET SEPSTR
VARSET SEPNUM
VARSET RETCANDIDATE
VARSET RETNUM

FOR LOCAL, 0, VARSIZE("ORIGSTR")
	;条件を満たしていないならダメ
	SIF !CONDITION:LOCAL
