;-------------------------------------------------
;desc  :キャラをランダムに選出する関数
;param :選択関数名:キャラを選出する条件となる関数の名前 SELECT_CHARA_RANDOM_LOGIC_●●(ARG:0)の●●の部分
;-------------------------------------------------
@SELECT_CHARA_RANDOM(選択関数名, バイアス関数名 = "")
#DIMS 選択関数名
#DIMS バイアス関数名

#DIM 対象
#DIM 候補, MAX_CHARA_NUM
#DIM 候補乱数 , MAX_CHARA_NUM
#DIM 候補数

VARSET 候補, -1
VARSET 候補数
;ガード節
TRYCCALLFORM SELECT_CHARA_RANDOM_LOGIC_%選択関数名%(MASTER)
CATCH
	THROW 指定された関数SELECT_CHARA_RANDOM_LOGIC_%選択関数名%が存在しません
ENDCATCH

FOR LOCAL, 0, CHARANUM
	CALLFORM SELECT_CHARA_RANDOM_LOGIC_%選択関数名%(LOCAL)
	IF RESULT == 1
		候補:候補数 = LOCAL
		候補数 ++
	ENDIF
NEXT

SIF 候補数 == 0
	RETURN -1

SIF バイアス関数名 == ""
	RETURN 候補:(RAND:候補数)

VARSET 候補乱数, __INT_MIN__

TRYCCALLFORM SELECT_CHARA_RANDOM_BIAS_%バイアス関数名%(MASTER)
CATCH
	THROW 指定された関数SELECT_CHARA_RANDOM_BIAS_%バイアス関数名%が存在しません
ENDCATCH

FOR LOCAL, 0, 候補数
	LOCAL:1 = 候補:LOCAL
	CALLFORM SELECT_CHARA_RANDOM_BIAS_%バイアス関数名%(LOCAL:1)
	IF RESULT >= 0
		IF RESULT <= __INT_MAX__ / 10000
			候補乱数:LOCAL = RAND(0, MAX(RESULT, 1) * 10000)
		ELSE
			候補乱数:LOCAL = __INT_MAX__
		ENDIF
	ELSE
		IF RESULT >= __INT_MIN__ / 10000
			候補乱数:LOCAL = RAND(RESULT * 10000, 0)
		ELSE
			候補乱数:LOCAL = __INT_MIN__
		ENDIF
	ENDIF
NEXT

対象 = 候補:FINDELEMENT(候補乱数, MAXARRAY(候補乱数, 0,候補数), 0, 候補数)

RETURN 対象

;-------------------------------------------------
;desc  :キャラをランダムに選出する関数
;param :選択関数名:キャラを選出する条件となる関数の名前 SELECT_CHARA_RANDOM_LOGIC_●●(ARG:0)の●●の部分
;param :バイアス関数名:キャラの選択確率に補正をかける関数の名前。大きい値を返すほど選出確率が上がる。SELECT_CHARA_RANDOM_BIAS_●●の●●の部分
;-------------------------------------------------
@SELECT_CHARA_RANDOM_MULTI(最大選択数, 選択関数名, バイアス関数名 = "")
#DIMS 選択関数名
#DIMS バイアス関数名
#DIM 対象
#DIM 候補, MAX_CHARA_NUM
#DIM 候補乱数, MAX_CHARA_NUM
#DIM 最大選択数
#DIM 候補数

VARSET 候補, -1
VARSET 候補乱数, __INT_MIN__
VARSET 候補数
VARSET SELECTED_CHARA, -1
VARSET SELECTED_CHARA_NUM

;ガード節
TRYCCALLFORM SELECT_CHARA_RANDOM_LOGIC_%選択関数名%(MASTER)
CATCH
	THROW 指定された関数SELECT_CHARA_RANDOM_LOGIC_%選択関数名%が存在しません
ENDCATCH

IF バイアス関数名 != ""
	TRYCCALLFORM SELECT_CHARA_RANDOM_BIAS_%バイアス関数名%(MASTER)
	CATCH
		THROW 指定された関数SELECT_CHARA_RANDOM_BIAS_%バイアス関数名%が存在しません
	ENDCATCH
ENDIF

FOR LOCAL, 0, CHARANUM
	CALLFORM SELECT_CHARA_RANDOM_LOGIC_%選択関数名%(LOCAL)
	IF RESULT == 1
		候補:候補数 = LOCAL
		IF バイアス関数名 == ""
			候補乱数:候補数 = RAND:__INT_MAX__
		ELSE
			CALLFORM SELECT_CHARA_RANDOM_BIAS_%バイアス関数名%(LOCAL)
			IF RESULT >= 0
				候補乱数:候補数 = RAND(0, MAX(RESULT, 1) * 10000)
			ELSE
				候補乱数:候補数 = RAND(RESULT * 10000, 0)
			ENDIF
		ENDIF
		候補数 ++
	ENDIF
NEXT

SELECTED_CHARA_NUM = MIN(候補数, 最大選択数)

FOR LOCAL, 0, SELECTED_CHARA_NUM
	LOCAL:1 = FINDELEMENT(候補乱数, MAXARRAY(候補乱数, 0, 候補数), 0, 候補数)
	SELECTED_CHARA:LOCAL = 候補:(LOCAL:1)
	候補乱数:(LOCAL:1) = __INT_MIN__
NEXT

SIF 候補数 == 0
	RETURN 0

RETURN SELECTED_CHARA_NUM

