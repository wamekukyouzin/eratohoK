					ENDIF
				ENDIF
			ENDIF
			FLAG:特殊勢力逆調教知り合いフラグ = 1
		ENDIF
	ENDIF
ENDIF
IF 参加者数
	ループ数 = MIN(4, VARSIZE("参加者") - 参加者数)
ELSE
	ループ数 = 4
ENDIF

FOR LOCAL:0, 0, ループ数
	FOR LOCAL:1, 0, CHARANUM
		IF TALENT:(LOCAL:1):特殊勢力素質 == 特殊勢力_狂信者 && !CFLAG:(LOCAL:1):調教参加フラグ && CFLAG:(LOCAL:1):所属 == 狂信者
			参加者:参加者数 =  LOCAL:1
			参加者数 ++
			CFLAG:(LOCAL:1):調教参加フラグ = 1
			CFLAG:(LOCAL:1):TEXT_LAST非表示 = 1
			CFLAG:(LOCAL:1):能力固定フラグ = 1
			BREAK
		ENDIF
	NEXT
