	FOR LOCAL:0, 0, CHARANUM
		IF CFLAG:(LOCAL:0):面識 && !IS_SP_CHARA(LOCAL:0) && CFLAG:(LOCAL:0):所属 == CFLAG:MASTER:捕虜先 && GETBIT(TALENT:(LOCAL:0):特殊勢力陥落系, 特殊勢力_狂信者) && !RAND:2
