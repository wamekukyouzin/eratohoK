IF LOCAL:0 >= 0 && LOCAL:0 <= 5
	RETURNF (CONFIG:50 >> (LOCAL:0 * 4)) & 0b1111
ENDIF
RETURNF -1

;-------------------------------------------------
;0か1だけのCONFIG切り替え
;-------------------------------------------------
@CONFIG_TOGGLE(ARG)
	CONFIG:ARG ++
	CONFIG:ARG &= 0x1
RETURN 0
