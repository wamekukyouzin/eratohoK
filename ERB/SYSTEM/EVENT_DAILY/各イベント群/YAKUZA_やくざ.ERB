				CALL COLOR_PRINTW(@"%ANAME(対象)%はやくざの愛人兼肉便器にされてしまった……", カラー_ピンク)
				DVAR:やくざ_肉便器対象ID = GET_ID(対象)
				DVAR:やくざ_発生フラグ = 1
			ENDIF
		ENDIF
	ENDIF
ENDIF

