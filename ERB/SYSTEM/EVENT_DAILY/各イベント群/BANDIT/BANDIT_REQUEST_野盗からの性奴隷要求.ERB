@EVENT_DAILY_BANDIT_REQUEST_SETTARGET()
FOR LOCAL, 0, CHARANUM
	IF CFLAG:(LOCAL):所属 == CFLAG:MASTER:所属 && !CFLAG:(LOCAL):捕虜先 && !IS_ANIMAL(LOCAL) && IS_FEMALE(LOCAL) && LOCAL != GET_COUNTRY_BOSS(CFLAG:MASTER:所属) && LOCAL != MASTER
