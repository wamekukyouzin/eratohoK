	IF COUNTRY_SOLDIER:勢力 >= 1000
		IF CITY_OWNER:都市 == 勢力
			IF IS_NEIBORING_ENEMY(都市)
				CITY_SOLDIER:都市 = 前線防衛兵数
				COUNTRY_SOLDIER:勢力 -= 前線防衛兵数
			ELSE
				CITY_SOLDIER:都市 = 後方防衛兵数
				COUNTRY_SOLDIER:勢力 -= 後方防衛兵数
			ENDIF
		ENDIF
	ENDIF
NEXT




