;-------------------------------------------------
;能力値ARGS:0が現在値のときの実際の影響力を返す関数  対象は対象のキャラ番号
;-------------------------------------------------
@ABL_POWER(現在値, 対象 = -1)
#FUNCTION
#DIM 現在値
#DIM 対象
#DIM ランク補正外値
#DIM ランクC補正対象値
#DIM ランクB補正対象値
#DIM ランクA補正対象値
#DIM ランクS補正対象値
#DIM 好感度補正利用値
#DIM 基礎値
#DIM 補正値
#DIM 補正上限
#DIM 難易度補正
#DIM 返却値

ランクS補正対象値 = MAX(現在値 - ランク閾値:ランク_ＳＬＧ:ランク_S + 1, 0)
ランクA補正対象値 = MAX(MIN(現在値, ランク閾値:ランク_ＳＬＧ:ランク_S - 1) - ランク閾値:ランク_ＳＬＧ:ランク_A + 1, 0)
ランクB補正対象値 = MAX(MIN(現在値, ランク閾値:ランク_ＳＬＧ:ランク_A - 1) - ランク閾値:ランク_ＳＬＧ:ランク_B + 1, 0)
ランクC補正対象値 = MAX(MIN(現在値, ランク閾値:ランク_ＳＬＧ:ランク_B - 1) - ランク閾値:ランク_ＳＬＧ:ランク_C + 1, 0)
ランク補正外値    = MIN(現在値, ランク閾値:ランク_ＳＬＧ:ランク_C - 1)


{
	基礎値 = (ランク補正外値 + ランクS補正対象値) * 250 +
		ランクC補正対象値 * 450 +
		ランクB補正対象値 * 750 + 
		ランクA補正対象値 * 1250 +
		500
}
;DEBUGPRINTFORML 現在値: {現在値} 基礎値:{基礎値}
;妊娠・臨月・育児まわりの補正
IF 対象 >= 0
	IF CFLAG:(対象):行動不能状態 == 行動不能_臨月
		TIMES 基礎値, 0.5
	ELSEIF TALENT:(対象):妊娠
		TIMES 基礎値, 0.75
	ELSEIF CFLAG:(対象):行動不能状態 == 行動不能_育児
		TIMES 基礎値, 0.9
	ENDIF
	IF TALENT:(対象):崩壊
		TIMES 基礎値, 0.5
	ELSEIF TALENT:(対象):虚ろ
		TIMES 基礎値, 0.8
	ENDIF
ENDIF

;補正値　万分率
;主人公の場合
IF 対象 == MASTER
	;陥落ひとりあたま2% ただし補正上限は200% つまり100人まで
	補正値 = 10000 + MIN(FLAG:陥落人数 * 200, 20000)
;キャラ指定がなければ100%
ELSEIF 対象 < 0
	補正値 = 10000
;違う勢力 CONFIG:314の難易度補正が乗る
ELSEIF CFLAG:MASTER:所属 != CFLAG:(対象):所属
	難易度補正 = (GET_DIFFICULTY_CORRECTION() - 100) / 3
	補正値 = 10000 + 10000 * 難易度補正 / 100
;同一勢力でも主人子が捕虜の間はダメ
ELSEIF (CFLAG:MASTER:捕虜先 != 0 && CFLAG:MASTER:所属 == CFLAG:(対象):所属)
	補正値 = 10000
;主人公勢力
ELSE
	補正値 = 10000
	補正上限 = 2000
	;好感度、従属度、依存度の中から一番高いやつを利用する
	;依存度が先行することはそんなないやろ………………
	好感度補正利用値 = MAX(CFLAG:(対象):好感度, CFLAG:(対象):従属度, CFLAG:(対象):支配度)

	;正妻なら倍まで伸びる
	IF TALENT:(対象):正妻
		補正上限 = 10000
	;妾なら+50%
	ELSEIF TALENT:(対象):妾
		補正上限 = 5000
	ELSE
		;陥落系素質はボーナスをかける
		SIF TALENT:(対象):親愛
			補正上限 += 1000
		SIF TALENT:(対象):恋慕 || TALENT:(対象):親友
			補正上限 += 500
		SIF TALENT:(対象):恋人
			補正上限 += 500
		SIF TALENT:(対象):隷属
			補正上限 += 1000
		SIF TALENT:(対象):服従
			補正上限 += 500
		SIF TALENT:(対象):烙印
			補正上限 += 300
		SIF TALENT:(対象):主人
			補正上限 += 500
		SIF TALENT:(対象):所有者
			補正上限 += 1000
	ENDIF

	;お気に入りでもボーナスを得る
	SIF ID_TO_CHARA(FLAG:お気に入り指定キャラ) == 対象
		補正上限 += 5000

	;値5ごとにパワーに0.01%の補正を得る。ただし補正上限（デフォ20%。素質による補正上限引き上げを無視すれば10000で到達）を超えない
	補正値 = 10000 + MIN(好感度補正利用値 / 5, 補正上限)
ENDIF

RETURNF MAX(基礎値 * 補正値 / 10000, 1)


