ELSE
	BATTLE_ATK:SIDE = ATTACK_LEVEL(SIDE, 0)
	BATTLE_DEF:SIDE = DEFENSE_LEVEL(SIDE, 0)
	BATTLE_INT:SIDE = INTELLIGENCE_LEVEL(SIDE, 0)
	BATTLE_MAG:SIDE = MAGIC_LEVEL(SIDE, 0)
	BATTLE_F_UNIT:SIDE = 1
ENDIF

