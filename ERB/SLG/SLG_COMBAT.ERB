	BATTLE_DEF:SIDE = DEFENSE_LEVEL(SIDE, CITY)
	BATTLE_INT:SIDE = INTELLIGENCE_LEVEL(SIDE, CITY)
	BATTLE_MAG:SIDE = MAGIC_LEVEL(SIDE, CITY)
