;-------------------------------------------------
;「政策経済徴兵防衛」の名称
;-------------------------------------------------
@SHOP_SLG_NAME21
SELECTCASE COUNTRY_POLICY:(CFLAG:MASTER:所属)
	CASE 政策_経済
		RESULTS:0 '= "経済成長"
	CASE 政策_徴兵
		RESULTS:0 '= "徴兵効率"
	CASE 政策_防衛
		RESULTS:0 '= "防衛倍率"
	CASEELSE
		RESULTS:0 '= "政策未定"
ENDSELECT

;-------------------------------------------------
;「政策経済徴兵防衛」のボタンカラー指定
;-------------------------------------------------
@SHOP_SLG_NAME_COLOR21
SELECTCASE COUNTRY_POLICY:(CFLAG:MASTER:所属)
	CASE 政策_経済
		SETCOLOR カラー_パ緑
	CASE 政策_徴兵
		SETCOLOR カラー_クリーム
	CASE 政策_防衛
		SETCOLOR カラー_パ青
	CASEELSE
		SETCOLOR カラー_明灰色
ENDSELECT

;-------------------------------------------------
;「政策経済徴兵防衛」の選択可否
;-------------------------------------------------
@SHOP_SLG_CHECK21
SIF FLAG:クリアフラグ
	RETURN 0
SIF FLAG:観戦モード
	RETURN 0
SIF CFLAG:MASTER:所属 == 0
	RETURN 0
SIF CONFIG:302 != 0
	RETURN 0
RETURN 1

;-------------------------------------------------
;「政策経済徴兵防衛」の左カラムメニューの入力処理
;-------------------------------------------------
@SHOP_SLG_EVENTBUY21
COUNTRY_POLICY:(CFLAG:MASTER:所属) ++
IF COUNTRY_POLICY:(CFLAG:MASTER:所属) >= 3
	COUNTRY_POLICY:(CFLAG:MASTER:所属) = 0
ENDIF
RETURN 0

