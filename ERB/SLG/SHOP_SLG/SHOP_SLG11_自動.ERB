@SHOP_SLG_NAME11
IF CONFIG:302 == 0
	RESULTS:0 '= "指示行動"
ELSE
	RESULTS:0 '= "委任行動"
ENDIF

;-------------------------------------------------
;「自動指示委任」のボタンカラー指定
;-------------------------------------------------
@SHOP_SLG_NAME_COLOR11
;選択中カラーと差異をつけるため色変え
;オン進出色・オフ後退色
IF CONFIG:302 != 0
	SETCOLOR 0xDF5050
ELSE
	SETCOLOR 0x7099DF
ENDIF

