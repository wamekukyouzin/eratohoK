@DIPLOMACY_REQUEST_CHECK(勢力, 要求先, ノルマ)
#FUNCTION
#DIM 勢力
#DIM 要求先
#DIM 君主
#DIM 要求先君主
#DIM ノルマ
#DIM スコア, 3
#DIM 最終値
#DIM 経済差
#DIM 兵力差
#DIM 政治力差
;方針1　勢力と要求先の経済差のSQRTベース
;方針2　勢力と要求先の兵力差のSQRT
;方針3　勢力と要求先の政治力合計差のSQRT

君主 = GET_COUNTRY_BOSS(勢力)
要求先君主 = GET_COUNTRY_BOSS(要求先)

経済差 = TMP_SUM_ECONOMY:勢力 - TMP_SUM_ECONOMY:要求先
