;-------------------------------------------------
;士官どうしの関係の基本設定
;-------------------------------------------------
@SHARED_SETTING_RELATION
#DIM 関係

FOR LOCAL, 1, CHARANUM
	FOR LOCAL:1, 1, CHARANUM
		SIF !IS_FIXED_CHARA(LOCAL:1)
			CONTINUE
		関係 = RELATION:LOCAL:(NO:(LOCAL:1))
		SIF GROUPMATCH(関係, 0, 100)
			CONTINUE
		IF 関係 > 100
			CALL CHANGE_RELATION_O_TO_O(LOCAL, LOCAL:1, 関係 * 3, 関係 * -2)
		ELSEIF 関係 < 100
			CALL CHANGE_RELATION_O_TO_O(LOCAL, LOCAL:1, (100 - 関係) * -10, (100 - 関係) * 10)
			CONTINUE
		ENDIF

		SIF !IS_COUNTRY(CFLAG:(LOCAL:1):所属)
			CONTINUE
		SIF GET_COUNTRY_BOSS(CFLAG:(LOCAL:0):所属) == LOCAL:0 && GET_COUNTRY_BOSS(CFLAG:(LOCAL:1):所属) == LOCAL:1
			CONTINUE
		SIF CFLAG:(LOCAL:0):所属 == CFLAG:(LOCAL:1):所属
			CALL CHANGE_RELATION_O_TO_O(LOCAL, LOCAL:1, RAND(400, 600), 0)
		SIF GET_COUNTRY_BOSS(CFLAG:(LOCAL:0):所属) ==  LOCAL:1
			CALL CHANGE_RELATION_O_TO_O(LOCAL, LOCAL:1, RAND(200, 300), 0)
	NEXT
NEXT
